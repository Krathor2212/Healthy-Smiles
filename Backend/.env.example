# Server Configuration
PORT=4000
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/healthy_smiles

# JWT Secret (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))")
JWT_SECRET=your-super-secret-jwt-key-base64-encoded-here

# AES-256-GCM Encryption Key (32 bytes, base64 encoded)
ENCRYPTION_KEY=your-encryption-key-base64-encoded-here

# HMAC Key for email lookups (32 bytes, base64 encoded)
HMAC_KEY=your-hmac-key-base64-encoded-here

# Encryption IV Length (12 bytes recommended for GCM)
ENCRYPTION_IV_LENGTH=12

# CORS Configuration (optional, defaults to *)
# ALLOWED_ORIGINS=http://localhost:3000,https://yourapp.com

# Email Configuration (for password reset - optional)
# EMAIL_SERVICE=gmail
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password

# File Upload Configuration
# MAX_FILE_SIZE=52428800  # 50MB in bytes

# Rate Limiting (requests per minute - optional)
# RATE_LIMIT_WINDOW_MS=60000
# RATE_LIMIT_MAX_REQUESTS=100

# WebSocket Configuration (optional)
# WS_PING_INTERVAL=25000
# WS_PING_TIMEOUT=5000
